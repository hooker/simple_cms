<table summary="Section form fields">
	<tr>
		<th><%= f.label(:page_id, "Page ID") %></th>
		<td><%= f.text_field(:page_id) %></td>
	</tr>
	<tr>
		<th><%= f.label(:name) %></th>
		<td><%= f.text_field(:name) %></td>
	</tr>
	<tr>
		<th><%= f.label(:position) %></th>
		<td><%= f.text_field(:position) %></td>
	</tr>
	<tr>
		<th><%= f.label(:visible) %></th>
		<td><%= f.check_box(:visible) %></td>
	</tr>
	<tr>
		<th><%= f.label(:content_type, "Content Type") %></th>
		<td>
			<%= f.radio_button(:content_type, 'text') %>
			<%= f.label(:content_type, "Text", :value => 'text') %>
			<%= f.radio_button(:content_type, 'html') %>
			<%= f.label(:content_type, "HTML", :value => 'html') %>
		</td>
	</tr>
	<tr>
		<th><%= f.label(:context) %></th>
		<td><%= f.text_area(:context, :size => '40x10') %></td>
	</tr>
</table>